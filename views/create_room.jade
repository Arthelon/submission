extends ./layout

block content
    .header
        .btns
            .float-left
                a(href='/') Home
            .float-right
                a(href='/logout') Logout
    .container(ng-controller='CreateRoomCtrl')
        h3 Create Room Here
        hr
        .row
            .col-md-6
                .panel.panel-default
                    .panel-heading.clearfix
                        h3.panel-title Create Room
                    .panel-body
                        form(ng-submit='submit()')
                            .form-group
                                label.col-lg-4.control-label(for='roomName') Room Name
                                input#roomName.form-control(ng-model='form.name' type='text', placeholder='Room Name' required)
                            .form-group
                                label.col-lg-4.control-label(for='roomPath') Path
                                input#roomPath.form-control(ng-model='form.path' type='text', placeholder='Room Path' required)
                            .form-group
                                label.col-lg-4.control-label(for='roomDesc') Description
                                input#roomDesc.form-control(ng-model='form.desc' type='text', placeholder='Optional')
                            button.btn.btn-success(type='submit') Submit
        .row.msg.text-center
            p(style='color:red;' ng-if='error') {{error}}
            p(style='color:green;' ng-if='success') {{success}}
block script
    script(src='js/controllers/create_room.js')