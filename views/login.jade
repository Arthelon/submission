extends ./layout

block head
    .header
        //LOGO
        .float-left.btns
            a(href='/') Main

block content
    .container
        .container-fluid
            h3 Login Here
            hr
            .row
                .col-md-6
                    .panel.panel-default
                        .panel-heading.clearfix
                            h3.panel-title Login
                        .panel-body
                            form(method='POST', action='/login')
                                .form-group
                                    label(for='usernameInput') Username
                                    input#usernameInput.form-control(name='username', placeholder='username')
                                .form-group
                                    label(for='passwordInput') Password
                                    input#passwordInput.form-control(name='password', type='password', placeholder='password')
                                .checkbox
                                    label
                                        input(type='checkbox')
                                        |  Remember me
                                if errors
                                    p #{errors}
                                button.btn.btn-success(type='submit') Submit

