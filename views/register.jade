extends ./layout

block head
    .header
        //LOGO
        .float-left.btns
            a(href='/') Main
        if user
            .float-right
                a(href='/logout') Logout

block content
    .container(ng-controller='RegisterCtrl')
        .container-fluid
            h3 Register Here
            hr
            .row
                .col-md-6
                    .panel.panel-default
                        .panel-heading.clearfix
                            h3.panel-title Register
                        .panel-body
                            form(ng-submit='register()')
                                .form-group
                                    label(for='fnameInput') First Name
                                    input#fnameInput.form-control(ng-model='form.first_name', placeholder='first name' required)
                                .form-group
                                    label(for='lnameInput') Last Name
                                    input#lnameInput.form-control(ng-model='form.last_name', placeholder='last name' required)
                                .form-group
                                    label(for='usernameInput') Username
                                    input#usernameInput.form-control(ng-model='form.username', placeholder='username' required)
                                .form-group
                                    label(for='emailInput') Email
                                    input#emailInput.form-control(ng-model='form.email', placeholder='email' required)
                                .form-group
                                    label(for='passwordInput') Password
                                    input#passwordInput.form-control(ng-model='form.password', type='password', placeholder='password' required)
                                .form-group
                                    input#passwordDupInput.form-control(ng-model='form.password2', type='password', placeholder='re-enter password' required)
                                button.btn.btn-success(type='submit') Submit
                    .msg.text-center
                        p(style='color:green;' ng-if='success') {{success}}
                        p(style='color:red;' ng-if='error') {{error}}
block script
    script(src='js/controllers/register.js')