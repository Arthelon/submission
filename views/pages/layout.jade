    body
        block content
        include ../partials/footer
        //Bower Components
        script(src='/jQuery/dist/jquery.min.js')
        script(src='/bootstrap/dist/js/bootstrap.min.js')
        script(src='/api-check/dist/api-check.min.js')
        script(src='/angular/angular.min.js')
        script(src='/angular-animate/angular-animate.min.js')
        script(src='/angular-jwt/dist/angular-jwt.min.js')
        script(src='/angular-messages/angular-messages.min.js')
        script(src='/angular-formly/dist/formly.min.js')
        script(src='/angular-formly-templates-bootstrap/dist/angular-formly-templates-bootstrap.min.js')
        script(src='/Chart.js/Chart.js')
        script(src='/angular-chart.js/dist/angular-chart.js')
        script(src='/lodash/dist/lodash.min.js')
        script(src='/angular-fancy-modal/dist/angular-fancy-modal.min.js')
        //Other Imports
        script(src='/ace-builds/src-min-noconflict/ace.js')
        script(src='/angular-ui-ace/ui-ace.js')
        //Angular Imports
        script(src='/js/services.js')
        script(src='/js/controllers.js')
        script(src='/js/controllers/problem.js')
        script(src='/js/controllers/dashboard.js')
        script(src='/js/controllers/room.js')
        script(src='/js/controllers/user.js')
        script(src='/js/controllers/student.js')
        script(src='/js/controllers/submission.js')
        script(src='/js/root.js')
